<UserControl
	x:Class="RAM.UI.View.InputTapeView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:RAM.UI.View"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="300"
	d:DesignWidth="300"
	DataContext="{Binding InputTapeViewModel, Source={StaticResource ModelViewLocator}}"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Button Grid.Row="0" Content="Add" />

		<DataGrid
			Grid.Row="1"
			AutoGenerateColumns="False"
			ItemsSource="{Binding TapeMembers}"
			SelectedItem="{Binding SelectedTapeMember}">
			<DataGrid.Columns>
				<DataGridTextColumn
					Width="*"
					Binding="{Binding Model.Number}"
					Header="No." />
				<DataGridTextColumn
					Width="4*"
					Binding="{Binding Model.Value}"
					Header="Value" />
			</DataGrid.Columns>

		</DataGrid>

		<Button Grid.Row="2" Content="Add" />
		<Button Grid.Row="3" Content="Delete" />
		<Button Grid.Row="4" Content="Update" />
		<Button Grid.Row="5" Content="Clear Tape" />
	</Grid>
</UserControl>
