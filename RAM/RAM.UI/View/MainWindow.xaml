<Window x:Class="RAM.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RAM.UI"
        xmlns:view="clr-namespace:RAM.UI.View"
        DataContext="{Binding MainWindowViewModel, Source={StaticResource ModelViewLocator}}"
        mc:Ignorable="d"
        Title="{Binding Header}" Height="350" Width="525">

	<DockPanel>
		<view:MenuBarView DockPanel.Dock="Top" />
	</DockPanel>

</Window>
